<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <!--
    This jelly script is used for per-project configuration.

    See global.jelly for a general discussion about jelly script.
  -->

  <!--
    Creates a text field that shows the value of the "name" property.
    When submitted, it will be passed to the corresponding constructor parameter.
  -->
  <f:entry title="Server Name" field="servername">
    <f:textbox />
  </f:entry>
  <f:entry title="Job Name" field="jobname">
    <f:textbox />
  </f:entry>
  <f:entry title="Job Holdtime (in min(s))" field="minutes"
    description="This field will be considered only for pausing a service">
	<f:textbox />
  </f:entry>
        
	<f:entry title="Do you want to start/pause the service?">
        <select name ="nagiosStatus">
                <f:option value="nagiosStart" selected="nagiosStart">Start the service</f:option>
                <f:option value="nagiosPause" selected="nagiosPause">Pause the service</f:option>
        </select>
        </f:entry>
</j:jelly>
